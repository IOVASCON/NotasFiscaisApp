<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<!-- Definição do layout principal como um GridPane -->
<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.izairton.notasfiscaisapp.controller.NotaFiscalController" hgap="10" vgap="10">
    <!-- Definição do espaçamento interno do GridPane -->
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    
    <!-- Rótulo e campo de texto para o número da nota fiscal -->
    <Label text="Número da Nota:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="numeroNotaField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    
    <!-- Rótulo e campo de texto para a data da nota fiscal -->
    <Label text="Data da Nota:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="dataNotaField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    
    <!-- Rótulo e campo de texto para o valor da nota fiscal -->
    <Label text="Valor da Nota:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="valorNotaField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    
    <!-- Rótulo e campo de texto para o fornecedor -->
    <Label text="Fornecedor:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="fornecedorField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    
    <!-- Rótulo e campo de texto para o produto -->
    <Label text="Produto:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <TextField fx:id="produtoField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    
    <!-- Botão para adicionar uma nova nota fiscal -->
    <Button text="Adicionar Nota Fiscal" onAction="#handleAddNotaFiscal" GridPane.rowIndex="5" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
</GridPane>
